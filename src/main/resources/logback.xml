<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds">
    <jmxConfigurator/>

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <charset>UTF-8</charset>
            <pattern>%highlight(%-5level) %logger{0} %blue([%file:%line]) %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.quetzalcoatl.minskinfobot" level="debug"/>

    <root level="info">
        <appender-ref ref="console"/>
    </root>
</configuration>
